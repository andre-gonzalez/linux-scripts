#!/bin/sh

sudo tlp bat
/bin/sh /home/frank/.scripts/prompt.sh "Deseja desligar a placa nvidia?" "envycontrol -s integrated"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o tailscale?" "sudo systemctl stop tailscaled"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja desligar o bluetooth?" "bluetoothctl power off & sudo systemctl stop bluetoothd"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja reduzir a brilho da tela para 50%?" "brightnessctl set 50%; kill -45 $(pidof dwmblocks)"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja reduzir a brilho da tela para 1%?" "brightnessctl set 1%; kill -45 $(pidof dwmblocks)"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja mudar o fundo da tela para preto?" "feh --bg-fill "/home/frank"/.config/.wallpaper/black.png"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o preload?" "sudo systemctl stop preload"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o insync?" "killall insync"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o dunst?" "killall dunst"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o cron?" "sudo systemctl stop cronie"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o iwd?" "sudo systemctl stop iwd"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o spotifyd?" "killall spotifyd"
# /bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o smbd" "systemctl stop smbd"
# /bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o nmb" "systemctl stop nmb"
# /bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o ssb" "systemctl stop ssb"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o networkd" "sudo systemctl stop networkd"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o libvirtd" "sudo systemctl stop libvirtd"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o docker?" "sudo systemctl stop docker"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o docker socket?" "sudo systemctl stop docker.socket"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o containerd" "sudo systemctl stop containerd"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o pritunl" "sudo systemctl stop pritunl-client"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o ufw" "sudo systemctl stop ufw"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o firewalld" "sudo systemctl stop firewalld"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o fail2ban" "sudo systemctl stop fail2ban"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o apparmor" "sudo systemctl stop apparmor"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o pipewire" "killall pipewire; killall pipewire-pulse"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja encerrar o wireplumber" "killall wireplumber"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja desativar o swap?" "swapoff -a"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja desativar o wifi?" "rfkill block wifi"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja desativar o bluetooth?" "rfkill block bluetooth"
/bin/sh /home/frank/.scripts/prompt.sh "Deseja ativar o undervolt da CPU?" "sudo systemctl restart intel-undervolt"
/bin/sh /home/frank/.scripts/prompt.sh "Disable HDMI-1 output" "xrandr --output HDMI-1 --off"
/bin/sh /home/frank/.scripts/prompt.sh "Setar display para apagar com 2 min de inatividade?" "xset dpms 120 120 120"
/bin/sh start-stop-xcompmgr.sh
echo "Consider disabling the secondary ssd"
echo "Consider disabling the webcam"
